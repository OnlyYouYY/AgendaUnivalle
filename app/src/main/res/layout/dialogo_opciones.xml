<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_gravity="center">

    <TextView
        android:text="@string/ElijaOpcionTXT"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:fontFamily="@font/poppins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>
    <com.airbnb.lottie.LottieAnimationView
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:lottie_imageAssetsFolder="assets"
        app:lottie_fileName="selectOption.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:layout_width="match_parent"
        android:layout_height="100dp">
    </com.airbnb.lottie.LottieAnimationView>
    <Button
        android:id="@+id/CD_Eliminar"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins"
        app:icon="@drawable/icono_eliminar_cd"
        android:text="@string/CD_Eliminar"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content">

    </Button>
    <Button
        android:id="@+id/CD_Actualizar"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins"
        android:layout_gravity="center"
        app:icon="@drawable/icono_actualizar_cd"
        android:text="@string/CD_Actualizar"
        android:layout_width="200dp"
        android:layout_height="wrap_content">

    </Button>

</androidx.appcompat.widget.LinearLayoutCompat>